{% extends "layout.njk" %}

{% block content %}
  <section class="shop container">
  <h2>Ãšltimos Produtos</h2>
  <div class="items">
    {% for product in products %}
      <div class="product">
        <div 
          class="image"
          style="background-image: url({{product.img if product.img else '//placehold.it/500x281'}})"
        >
        </div>

        <div class="price">
          <p>{{product.priceNew}}</p>
          {% if product.old_price > product.price %}
            <div class="old-price">
              <p>{{product.oldPrice}}</p>
            </div>
          {% endif %}
        </div>
        <h4>{{product.name}}</h4>

        <a href="/products/{{product.id}}" class="button">Ver Produto</a>
      
      </div>
    {% endfor %}

  </div>
  
  </section>
{% endblock %}


