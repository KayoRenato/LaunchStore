
<div class="item">
  <div>E-mail</div>
  <div class = "input">
      <input 
        type="email"
        name="email"
        placeholder="Digite o e-mail de cadastro"
        value="{{user.email}}"
        onblur="Validate.apply(this,'isEmail')"
        required="required"
        oninvalid="this.setCustomValidity('Informe o E-mail da conta.')"
        onchange="this.setCustomValidity('')"

      >
  </div>
</div>

<div class="item">
  <div>Senha</div>
  <div class = "input">
      <input 
        type="password"
        name="password"
        placeholder="Digite uma nova senha segura"   
        required="required"
        oninvalid="this.setCustomValidity('Insira uma Senha!')"
        onchange="this.setCustomValidity('')"
      >
  </div>
</div>

<div class="item">
  <div>Confirmar Senha</div>
  <div class = "input">
    <input 
      type="password"
      name="passwordCheck"
      placeholder="Repita a senha"
      required="required"
      oninvalid="this.setCustomValidity('Repita a Senha!')"
      onchange="this.setCustomValidity('')"
    >
  </div>
</div>

<input type="hidden" name="token" value="{{token}}">