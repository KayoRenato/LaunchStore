{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

  {% call card.render('Login', 'login container' ) %}

    <form action="/users/login" method="post">
      <div class="fields">
        {% include "session/fields.njk" %}  
      </div>

      <button class="button" type="submit">Entrar</button>

      <div class="footer-login">
        <ul>
          <li>
            <a href="/users/register">Registre-se</a>
          </li>
          <li>
            <a href="/users/forgot-password">Esqueci a senha</a>
          </li>
          
        </ul>
      </div>
    </form>
    
  {% endcall %}

{% endblock %}