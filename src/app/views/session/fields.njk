
<div class="item">
  <div>E-mail</div>
  <div class = "input">
      <input 
        type="email"
        name="email"
        placeholder="Digite o seu e-mail"
        value="{{user.email}}"
        onblur="Validate.apply(this,'isEmail')"
        required="required"
        oninvalid="this.setCustomValidity('Preencha seu E-mail!')"
        onchange="this.setCustomValidity('')"

      >
  </div>
</div>

<div class="item">
  <div>Senha</div>
  <div class = "input">
      <input 
        type="password"
        name="password"
        placeholder="Digite sua senha segura"   
        required="required"
        oninvalid="this.setCustomValidity('Insira uma Senha!')"
        onchange="this.setCustomValidity('')"
      >
  </div>
</div>
