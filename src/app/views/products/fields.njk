<div class="item">
  <div>Categoria</div>
  <div>
     <select name="category_id">
      {% for category in categories %}
        <option value="{{category.id}}"
          {% if product.category_id == category.id %} 
            selected
          {% endif %}
        >
          {{category.name}}
        </option>
      {% endfor %}
     </select>
  </div>
</div>

<div class="item">
  <div>Título</div>
  <div>
      <input 
        type="text"
        name="name"
        placeholder="Digite o Título do Anúncio"
        value="{{product.name}}"
      >
  </div>
</div>

<div class="item">
  <div>Descrição</div>
  <div>
    <textarea name="description">{{product.description}}</textarea>
  </div>
</div>

<div class="item">
  <div>Fotos</div>
  <div>
    <div id="photos-upload">
      <input 
        id="photos-input"
        type="file" 
        name="photos" 
        multiple
        accept="image/*"
        onchange="PhotosUpload.handleFileInput(event)"
      >
      <p>Selecione até 6 fotos</p>
    </div>
    <div id="photos-preview">
      {% if product.files %}
        {% for file in product.files %}
          <div class="photo" id="{{file.id}}">
            <img src="{{file.src}}" alt="{{file.name}}">
            <i 
              class="fas fa-trash-alt"
              onclick="PhotosUpload.removeImgAfterDB(event)"
            ></i>
          </div>          
        {% endfor %}
        <input type="hidden" name="removed_files">
      {% endif %}
    </div>
  </div>
</div>

<div class="item">
  <div>Valor</div>
  <div>
      <input 
        type="text"
        name="price"
        placeholder="Preço do Produto"
        value="{{product.formattedPrice}}"
        onkeydown="Mask.apply(this,'formatBRL')"
      >
  </div>

  {% if product.old_price %}
    <input type="hidden" name="old_price" value={{product.old_price}}>
  {% endif %}
</div>

<div class="item">
  <div>Quantidade</div>
  <div>
      <input 
        type="number"
        min=0
        name="quantity"
        placeholder="Estoque Disponível"
        value={{product.quantity}}
      >
  </div>
</div>

{% if (product.status == 1) or (product.status == 0) %}

  <div class="item">
    <div> Diponível </div>
    <div class="available">
        <span>
          <input 
            type="radio" 
            id="radio1"
            name="status"
            value = 1
            {% if product.status == 1 %}
              checked
            {% endif %}
          >
          <label for="radio1">Sim</label>
        </span>
        <span>
          <input 
            type="radio" 
            id="radio0"
            name="status"
            value = 0 
            {% if product.status == 0 %}
              checked
            {% endif %}
          > 
          <label for="radio0">Não</label>
        </span>
    </div>
  </div>
  
{% endif %}
