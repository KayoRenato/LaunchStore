<div class="item">
  <div>Categoria</div>
  <div>
     <select name="category_id">
      {% for category in categories %}
        <option value="{{category.id}}" 
          {% if product.category_id == category.id %} 
            select
          {% endif %}
        >
          {{category.name}}
        </option>
      {% endfor %}
     </select>
  </div>
</div>

<div class="item">
  <div>Nome do Produto</div>
  <div>
      <input 
        type="text"
        name="name"
        placeholder="Digite o Título do Anúcio"
        value={{product.name}}
      >
  </div>
</div>

<div class="item">
  <div>Descrição</div>
  <div>
    <textarea 
      name="description"
    >
      {{product.description}}
    </textarea>
  </div>
</div>

{# CAMPO DE FOTO #}

<div class="item">
  <div>Valor</div>
  <div>
      <input 
        type="text"
        name="price"
        placeholder="Preço do Produto"
        value={{product.price}}
        {# MÁSCARA DE DINHEIRO #}
      >
  </div>

  {% if product.old_price %}
    <input type="hidden" name="old_price" value={{product.old_price}}>
  {% endif %}
</div>

<div class="item">
  <div>Quantidade</div>
  <div>
      <input 
        type="number"
        min=0
        name="quantity"
        placeholder="Estoque Disponível"
        value={{product.name}}
      >
  </div>
</div>

{% if product.status %}

  <div class="item">
    <div> Diponível </div>
    <div>
        <span>
          <input 
            type="radio" 
            name="status"
            value ="1"
            {% if products.status == 1 %}
              checked
            {% endif %}
          > Sim
        </span>
        <span>
          <input 
            type="radio" 
            name="status"
            value ="0" 
            {% if products.status == 0 %}
              checked
            {% endif %}
          > Não
        </span>
    </div>
  </div>
  
{% endif %}
