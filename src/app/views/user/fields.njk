<div class="item">
  <div>Nome Completo</div>
  <div>
      <input 
        type="text"
        name="name"
        placeholder="Digite o seu nome completo"
        value="{{user.name}}"
      >
  </div>
</div>

<div class="item">
  <div>E-mail</div>
  <div>
      <input 
        type="email"
        name="email"
        placeholder="Digite o seu e-mail"
        value="{{user.email}}"
      >
  </div>
</div>

<div class="item">
  <div>Senha</div>
  <div>
      <input 
        type="password"
        name="password"
        placeholder="Digite uma senha segura"
        value="{{user.password}}"
      >
  </div>
</div>

{% if not user.id %}
  <div class="item">
    <div>Confirmar Senha</div>
    <div>
      <input 
        type="password"
        name="passwordCheck"
        placeholder="Repita a sua senha escolhida"
      >
    </div>
  </div>

{% endif %}

<div class="item">
  <div>CPF ou CNPJ</div>
  <div>
      <input 
        type="text"
        name="cpf_cnpj"
        placeholder="Digite o seu documento"
        value="{{user.cpf_cnpj}}"
      >
  </div>
</div>

<div class="item">
  <div>CEP</div>
  <div>
      <input 
        type="text"
        name="cep"
        placeholder="99999-999"
        value="{{user.cep}}"
      >
  </div>
</div>

<div class="item">
  <div>Endereço</div>
  <div>
      <input 
        type="text"
        name="address"
        placeholder="Digite o seu endereço completo"
        value="{{user.address}}"
      >
  </div>
</div>

